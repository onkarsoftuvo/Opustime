<p id="notice"><%= notice %></p>

<h1>Listing Imports</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Import type</th>
      <th>Status</th>
      <th>Show delete</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= import.file_name %></td>
        <td><%= import.import_type %></td>
        <td><%= import.status %></td>
        <td><%= import.show_delete %></td>
        <td><%= import.company %></td>
        <td><%= link_to 'Show', import %></td>
        <td><%= link_to 'Edit', edit_import_path(import) %></td>
        <td><%= link_to 'Destroy', import, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

