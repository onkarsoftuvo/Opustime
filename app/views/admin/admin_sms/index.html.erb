<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      SMS Package
    </h1>
    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i> Home</li>
      <li class="active">SMS</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-8">
        <div class="box box-primary">
          <div class="box-header with-border">
            <div class="col-md-6">
                <h3 class="box-title">SMS Package List</h3>
            </div>
            <div class="col-md-6">
              <%= link_to new_admin_sm_path, class: "btn btn-primary pull-right", remote: true do %>
                  <span><i class="fa fa-plus"></i> Add SMS Package</span>
              <% end %>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <table id="example1" class="table table-bordered custom_table">
              <thead>
              <tr>
                <th class="no_sort"> Sr. No.</th>
                <th>No. of SMS</th>
                <!-- <th>SMS Credit</th> -->
                <th>Price</th>
                <th>Status</th>
                <th>Note</th>
                <th class="no_sort text-center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <%  @sms_plan.each_with_index do |plan, index|%>
                  <tr>
                    <td class="text-center">
                      <!-- <input type="checkbox" name="" class="minimal"> -->
                      <%= "#{index+1} "%>
                    </td>
                    <td><%= plan.no_sms%></td>
                    <!-- <td>5</td> -->
                    <td>$ <%= plan.amount%></td>
                    <%if plan.status == true%>
                        <td>Active</td>
                    <%else%>
                        <td>Inactive</td>
                    <%end%>
                    <td><%= plan.notes%></td>
                    <td class="action_btns text-center">
                      <div class="btn-group">
                        <%= link_to "admin_sms/#{plan.id}/edit ", class: "btn btn-default", remote: true do %>
                            <i class="fa fa-pencil-square-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <div class="col-md-4">
        <%= render :partial => 'admin/partial/default_sms',:locals => {:default_sms=>@default_sms} %>
      </div>

      <div class="col-md-4" id="sms_plan_form"></div>

      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
    //iCheck for checkbox and radio inputs
    $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
      checkboxClass: 'icheckbox_minimal-blue',
      radioClass: 'iradio_minimal-blue'
    });
  });
</script>
