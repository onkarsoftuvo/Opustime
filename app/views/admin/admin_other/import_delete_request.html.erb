
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Import Delete Request
    </h1>
    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i> Home</li>
      <li class="active">Import Delete Request</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">Trial List Report</h3>
            <p style= "color:green;" id="notice"><%= flash[:notice] %></p>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="table-responsive">
              <table id="example1" class="table table-bordered custom_table">
                <thead>
                <tr>
                  <th>Sr. No</th>
                  <th>Import Id</th>
                  <th>Customer Name(Req. By)</th>
                  <th>Customer Type</th>
                  <th>Import Create Date and Time</th>
                  <th>File Name</th>
                  <th>Import Type</th>
                  <th>status</th>
                  <th class="no_sort text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @import.each_with_index do |import, index|%>
                    <tr>
                      <td><%= "#{index+1}"%></td>
                      <td><%= import.id %></td>
                      <td><%= import.user.try(:full_name_with_title) %></td>
                      <td><%= import.user.try(:user_role).try(:name) %></td>
                      <td><%= import.created_at.try(:strftime, '%d%B%Y ,%H:%M:%S %p')%></td>
                      <td><%= import.doc_file_name%></td>
                      <td><%= import.import_type%></td>
                      <td><%= import.status%> </td>
                      <td class="action_btns text-center">
                        <div class="btn-group">
                          <%= link_to  "/import/#{import.id}/delete", :class => 'btn btn-default',:method => 'delete', data: { confirm: "Are you sure?" } do %>
                              <i class="fa fa-trash"> </i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                <%end%>
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<!-- Modal -->
  <div class="modal fade bs-example-modal-xs" id="smsCredits" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Trial</h4>
        </div>
        <form class="form-horizontal">
          <div class="modal-body">
              <div class="form-group">
                <label class="col-md-2 control-label">Extending Date</label>
                <div class="col-md-10">
                  <input type="text" name="" class="form-control">
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<!-- ./wrapper -->

<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
  $("#notice" ).fadeOut(5000);
</script>
