<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      User Notification
    </h1>
    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i> Home</li>
      <li class="active">Notifition</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">User Notification Report</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="table-responsive">
              <table id="example1" class="table table-bordered custom_table">
                <thead>
                <tr>
                  <th>Sr. No</th>
                  <th>Business Name</th>
                  <th>Total Customer</th>
                  <th>Total New Customer Last Week</th>
                  <th>Time Left</th>
                  <th class="no_sort text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @company.each do |comp| %>
                    <tr>
                      <td><%= @count += 1 %></td>
                      <td><%=  comp.company_name %></td>
                      <td><%= comp.patients.count%></td>
                      <td><%= customer_last_week(comp).count%></td>
                      <td><%= comp.subscription.subscription_days_remaining %> days</td>
                      <td class="action_btns text-center">
                        <div class="btn-group">
                          <%= link_to("/business/#{comp.id}/details_list"  , :class => 'btn btn-default')  do %>
                              <i class="fa fa-eye"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>

                <% end %>
                </tfoot>
                </tbody>
                </table>

            </div>
            <!--responsive-->
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>


<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
