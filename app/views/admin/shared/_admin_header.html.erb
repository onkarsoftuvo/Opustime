<header class="main-header">
  <!-- Logo -->
  <i class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>O</b>T</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Opus</b>Time</span>
  </i>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">

        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_owner.try(:logo).present? ? current_owner.logo.url(:thumb) : 'default_admin', {class: "user-image"} %>
            <span class="hidden-xs"><%= current_owner.full_name rescue '' %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header" id="profile_image">
              <%= image_tag current_owner.try(:logo).present? ? current_owner.logo.url(:thumb) : 'default_admin', {class: "user-image"} %>
              <p>
                <!--<%= current_owner.full_name rescue '' %>-->
                <!--<small>Member since Nov. 2012</small>-->
              </p>
            </li>

            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to '/admin/admin_profiles/edit', class: "btn btn-default btn-flat" do %>
                    <i>Profile</i>
                <% end %>
              </div>
              <div class="pull-right">
                <%= link_to 'Sign Out',destroy_owner_session_path, class: "btn btn-default btn-flat",:method => :delete  %>
              </div>
            </li>
          </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->
        <li>
          <!--  <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a> -->
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>

#profile_image{
  background: #fff;
  margin-left: 30%;
}
#notice1 {
  margin-top: -12px !important;
  padding: 2px;
  margin-right: -11px;
  float: right !important;
}
.isa_success.custom_succes{
  margin: 0;
  padding: 0px !important;
  border-radius: 6px;
}
.isa_error.custom_error{
  margin: 0;
  padding: 0px !important;
  border-radius: 6px;
}
</style>