<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Subscription Package
    </h1>
    <div style="text-align: center" class="isa_success hidden" id="success_notice">
      <i class="fa fa-check"></i>
      <%= flash.now[:success] %>
    </div>
    <div style="text-align: center" class="isa_warning hidden" id="warning_notice">
      <i class="fa fa-warning"></i>
      <%= flash.now[:warning] %>
    </div>

    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i> Home</li>
      <li class="active">Subscription</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">Subscription Package List</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group filter-con">
                  <label>Filters</label>

                  <div class="col-md-3">
                    <%= form_tag admin_subscription_index_path, :method => :get, :class => "login-form" do %>
                        <!--<select class="form-control">
                          <option>Name</option>
                        </select>-->
                        <%= select_tag 'plan_id', options_for_select(@subscribe.collect { |u| [u.name, u.id] },:selected=>params[:plan_id].to_i),prompt: 'Please select package name', :class => "form-control" %>
                        </div>
                        <div class="col-md-3">
                          <%= select_tag 'sub_id', options_for_select(@subscribe.collect { |u| [u.price, u.id] },:selected=>params[:sub_id].to_i),prompt: 'Please select package amount', :class => "form-control" %>
                        </div>
                        <div class="col-md-2">
                          <%= submit_tag "Filter", class: "btn btn-large btn-primary btns" %>
                        </div>
                        <div class="col-md-2 pull-right text-right">
                          <%= link_to "/admin_subscription", class: "btn btn-default pull-right" do %>Clear Filter
                          <% end %>
                        </div>
                    <% end %>
                    </div>
              </div>
            </div>
            <table id="example1" class="table table-bordered custom_table">
              <thead>
              <tr>
                <!--<th class="no_sort"></th>-->
                <th>Name</th>
                <th>No. of Professionals</th>
                <th>Category</th>
                <th>Price</th>
                <th>Status</th>
                <!--<th>Extended Subscription</th>-->
                <th class="no_sort text-center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @subscribe.each do |sub| %>
                  <tr>
                    <!--<td class="text-center">-->
                    <!--<input type="checkbox" class='icheck-me' data-skin="square" data-color="blue">-->
                    <!--</td>-->
                    <td><%= sub.name %></td>
                    <td><%= sub.no_doctors %></td>
                    <td><%= sub.category %></td>
                    <td>$<%= sub.price %></td>
                    <% if sub.status == true %>
                        <td>Active</td>
                    <% else %>
                        <td>Inactive</td>
                    <% end %>
                    <!--<td>10 days</td>-->
                    <td class="action_btns text-center">
                      <div class="btn-group">
                        <%= link_to "admin_subscription/#{sub.id}/edit ", class: "btn btn-default" do %>
                            <i class="fa fa-pencil-square-o"></i>
                        <% end %>
                      </div>
                      <div class="btn-group">
                        <%= link_to "admin_subscription/#{sub.id}",:method => :delete, :data => {:confirm => "Are You Sure?"}, class: "btn btn-default" do %>
                            <i class="fa fa-trash-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        });
    });

    function icheck() {
        if ($(".icheck-me").length > 0) {
            $(".icheck-me").each(function () {
                var $el = $(this);
                var skin = ($el.attr('data-skin') !== undefined) ? "_" + $el.attr('data-skin') : "",
                        color = ($el.attr('data-color') !== undefined) ? "-" + $el.attr('data-color') : "";
                var opt = {
                    checkboxClass: 'icheckbox' + skin + color,
                    radioClass: 'iradio' + skin + color
                }
                $el.iCheck(opt);
            });
        }
    }

    $(function () {
        icheck();
    })
</script>

<script>
    $(document).ready(function () {

        if (<%= flash[:warning].present?  %>) {
            $('#warning_notice').removeClass('hidden');
            $('#warning_notice').delay(5000).fadeOut(400);
        }else if  (<%= flash[:success].present?  %>){
            $('#success_notice').removeClass('hidden');
            $('#success_notice').delay(5000).fadeOut(400);
        }
    });
</script>

