
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Edit SMS Group</h3>
  </div>
  <%= form_for(@sms_group, url: "/admin_sms_groups/#{@sms_group.id}", method: 'put', html: {:class => "orm-horizontal box-body", :id => 'plan_edit_from'}) do |f| %>

      <div class="col-sm-12 form-group">
        <!--<label class="col-sm-3 control-label">Email</label>-->
        <%= f.label :name, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <!--<input type="email" class="form-control" placeholder="">-->
          <%= f.text_field :name, :required => true, :class => "form-control" %>
        </div>
      </div>

      <div class="col-sm-12 form-group">
        <label class="col-sm-3 control-label" style="margin-top: 12px">Countries</label>
        <div class="col-sm-9">
          <select name ="countries[]" id="countries" multiple>
            <% @countries.each do |country| %>
                <option value="<%=country['code']%>" <% if @sms_group_countries.include? country['code' ]%> selected <%end%>><%=country['name']%></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="col-sm-12 form-group">
        <label class="col-sm-3 control-label" style="margin-top: 12px">Incoming SMS</label>
        <div class="col-sm-9">
          <%= f.check_box :incoming_sms%>
        </div>
      </div>



      <div class="box-footer">
        <%= f.submit "Save", class: "btn btn-info pull-right", :style => "margin-top: 18px;" %>
      </div>
  <% end %>
</div>
<script>
    $('#countries').multiselect({
        columns: 1,
        placeholder: 'Select Countries',
        search: true
    });

    $("#sms_group_incoming_sms").bootstrapSwitch({
        onText: 'ON',
        offText: 'OFF',
        size: 'small',
        onColor: 'success'
    });
</script>