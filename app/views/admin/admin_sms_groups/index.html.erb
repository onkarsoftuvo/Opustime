<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      SMS Groups
    </h1>
    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i> Home</li>
      <li class="active">SMS Groups</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-8">
        <div class="box box-primary">
          <div class="box-header with-border">
            <div class="col-md-6">
                <h3 class="box-title">SMS Groups List</h3>
            </div>
            <div class="col-md-6">
              <%= link_to new_admin_sms_group_path, class: "btn btn-primary pull-right", remote: true do %>
                  <span><i class="fa fa-plus"></i> Add SMS Group</span>
              <% end %>
            </div>

          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <table id="example1" class="table table-bordered custom_table">
              <thead>
              <tr>
                <th class="no_sort"> Sr. No.</th>
                <th>Group Name</th>
                <th>Incoming SMS</th>
                <th class="no_sort text-center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <%  @sms_groups.each_with_index do |group, index|%>
                  <tr>
                    <td class="text-center">
                      <!-- <input type="checkbox" name="" class="minimal"> -->
                      <%= "#{index+1} "%>
                    </td>
                    <td><%= group.name%></td>
                    <%if group.incoming_sms == true%>
                        <td>Enabled</td>
                    <%else%>
                        <td>Disabled</td>
                    <%end%>
                    <td class="action_btns text-center">
                      <% unless group.name.try(:downcase) == 'default' %>
                          <div class="btn-group">
                            <%= link_to "admin_sms_groups/#{group.id}/edit ", class: "btn btn-default", remote: true do %>
                                <i class="fa fa-pencil-square-o"></i>
                            <% end %>
                            <%= link_to "admin_sms_groups/#{group.id} ", method:'delete', class: "btn btn-danger",  data: {confirm: "Are you sure you want to delete this SMS group?"} do%>
                                <i class="fa fa-trash"></i>
                            <% end %>
                          </div>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <div class="col-md-4" id="sms_grp_form"></div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        });
    });
</script>
