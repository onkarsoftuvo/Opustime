
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Edit SMS Group</h3>
  </div>
  <%= form_for(@sms_number, url: "/sms_number/#{@sms_number.id}", html: {:class => "orm-horizontal box-body", :id => 'number_edit_from'}) do |f| %>

      <div class="col-sm-12 form-group">
        <!--<label class="col-sm-3 control-label">Email</label>-->
        <%= f.label :company, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <!--<input type="email" class="form-control" placeholder="">-->
          <%= @sms_number.company.company_name %>
        </div>
      </div>

      <div class="col-sm-12 form-group">
        <!--<label class="col-sm-3 control-label">Email</label>-->
        <%= f.label :number, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <!--<input type="email" class="form-control" placeholder="">-->
          <%= f.text_field :number, :required => true, :class => "form-control" %>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit "Save", class: "btn btn-info pull-right", :style => "margin-top: 18px;" %>
      </div>
  <% end %>
</div>
