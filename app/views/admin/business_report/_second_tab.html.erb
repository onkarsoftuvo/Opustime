<div class="tab-pane " id="tab_3">
                          <div class="row">
                            <div class="col-md-12">
                              <div class="form-group filter-con">
                                <label>Filters</label>
                                <div class="col-md-3">
                                <%= form_tag("/business/#{@comp.id}/details_list#tab_3", :method => :get)  do %>
                                  <%= text_field_tag :Customer, params[:Customer], :placeholder => 'Customer Name', class: :"form-control"%>
                                  <%= hidden_field_tag :tab_no , 2 %>
                                </div>
                                <div class="col-md-3">
                                  <select id="states-of-country" name="project[country]" class="form-control">
                                  <option id="no-state" value="" selected>Select Your Country</option>
                              
                                  /* For states within IN */
                                  <% customise_state(CS.countries).each do |arr| %>
                                      <option value="<%= arr.last %>" id="<%= arr.last %>"><%= arr.first %></option>
                                    <% end %>
                                  </select>
                                </div>
                                <div class="col-md-1">
                                  <button class="btn btn-info">Filter</button>
                                </div>
                               <!-- <div class="col-md-2 pull-right text-right">
                                  <button class="btn btn-default">Clear Filter</button>
                                </div> -->
                                 <%= link_to "business/#{@comp.id}/details_list#tab_3", class: "btn btn-default" do %>Clear Filter
                                  <%end%>
                                <%end%>
                              </div>
                            </div>
                            <div class="col-md-12">
                              <table id="example3" class="table table-bordered custom_table" data-source="">
                                <thead>
                                <tr>
                                  <!--<th class="no_sort text-center select_all"></th>-->
                                  <th>Sr No</th>
                                  <th>Name</th>
                                  <th>Phone No</th>
                                  <th>Email ID</th>
                                  <th>Gender</th>
                                  <th>Country</th>
                                  <th>Last Appointment</th>
                                  <th class="no_sort text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                	<% @customer.each do |comp|%>
                                <tr>
                                  <!--<td class="text-center">-->
                                    <!--<input type="checkbox" name="" class="minimal">-->
                                  <!--</td>-->
                                  <td><%= @count_customer += 1 %></td>
                                  <td><%= comp.first_name %></td>
                                  <td><%= comp.patient_contacts.first.try(:contact_no) %></td>
                                  <td><%= comp.email %></td>
                                  <td><%= comp.gender %></td>
                                  <td><%= comp.country %></td>
                                  <td><%= comp.appointments.active_appointment.first.try(:name_with_date)%></td>
                                  <td class="action_btns text-center">
                                    <div class="btn-group class  btn btn-default">
                                       <%= link_to "business/#{comp.id}/edit_patient"    do %>
                                     <i class="fa fa-pencil-square-o"></i>
                                      <% end %> 
                                
                                    </div>
                                  </td>
                                </tr>
                                 <% end %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                          <div class="clearfix"></div>
                        </div>