<div class="content-wrapper">
  <!-- Content Header (Page header) -->

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">

        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">Admin User List</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
              </div>
            </div>

            <table id="user_approvals" class="display" data-source="<%= admin_approvals_path(format: :json) %>">
              <thead>
              <tr>
                <th>Sr. No</th>
                <th>Image</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Role</th>
                <th>Action</th>
                <!-- <th class="no_sort text-center">Actions</th> -->
              </tr>
              </thead>
              <tbody>

              </tbody>
            </table>

          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<script>

    var oTable;
    $(document).ready(function () {
        oTable = $('#user_approvals').dataTable({
            "language": {
                "processing": "<img src='../assets/reload.gif'>"
            },
            "processing": true,
            "serverSide": true,
            "bStateSave": true,
            "ajax": $('#user_approvals').data('source'),
            "pagingType": "full_numbers",
            'columns': [
                {'sortable': true, 'searchable': true},
                {'sortable': false, 'searchable': true},
                {'sortable': true, 'searchable': true},
                {'sortable': true, 'searchable': true},
                {'sortable': true, 'searchable': true},
                {'sortable': true, 'searchable': true},
                {'sortable': false, 'searchable': false}

            ]
        });
    });

    function activate(id) {
        $.get('/admin/approvals/' + id + '/active_inactive', function (data) {
            if (data.flag) {
                debugger;
                toast.success_message(data.message)
                oTable.fnStandingRedraw();
            } else {
                toast.error_message(data.message)
            }
        });
    }

    function destroy(id) {
        $.ajax({
            url: '/admin/approvals/' + id,
            type: 'DELETE',
            success: function (data) {
                if (data.flag) {
                    // Redraw datatable
                    toast.success_message(data.message)
                    oTable.fnStandingRedraw();
                } else {
                    toast.error_message(data.message)
                }

            },
            error: function () {
                toast.error_message('Something went wrong..!')
            }
        });

    }
</script>

