      <%= form_tag  sms_setting_sms_edit_path, :method=> :get, :class => "form-horizontal modal-body" do %>

          <div class="form-group">
            <!--<label class="col-sm-3 control-label">Email</label>-->
            <%= label_tag :SMS_Credit ,nil,:class => "col-sm-2 control-label"%>
            <div class="col-sm-9">
              <!--<input type="email" class="form-control" placeholder="">-->
              <%= text_field_tag :default_sms, params[:default_sms], :required => true, :class =>"form-control" , :placeholder => @comp.sms_setting.default_sms %>
              <%= hidden_field_tag :company_id, @comp.id%>
            </div>
          </div>

          <div class="box-footer">
            <%= submit_tag "Cancel",class: "btn btn-default", :type => "reset" %>

            <%= submit_tag "Save", class: "btn btn-info pull-right" %>
          </div>
      <% end %>
    </div>
  </div>
